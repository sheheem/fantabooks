												<input type="text" name="streetaddress2" class="form-control"
													placeholder="Appartments, suite, unit etc ...">

												<div class="row">
													<div class="col-sm-6">
														<label>Town / City *</label>
														<input type="text" name="city" class="form-control">
													</div><!-- End .col-sm-6 -->

